{
  "verbose": true,
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/e2e/",
    "/coverage/"
  ],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "jest-extended/all"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/src/testUtils/"
  ],
  "coverageReporters": [
    "json-summary",
    "lcov",
    "text",
    "clover"
  ]
}