{
  "verbose": true,
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/e2e/",
    "/coverage/"
  ],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "jest-extended/all"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/src/testUtils/",
    "src/index.ts"
  ],
  "coverageReporters": [
    "json-summary",
    "lcov",
    "text",
    "clover"
  ]
}